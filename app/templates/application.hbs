<a-scene>
  <a-sphere position="0 1.25 -1" radius="1.25" color="#EF2D5E"></a-sphere>
  <a-box position="-1 0.5 1" rotation="0 45 0" width="1" height="1" depth="1" color="#4CC3D9"></a-box>
  <a-cylinder position="1 0.75 1" radius="0.5" height="1.5" color="#FFC65D"></a-cylinder>

  {{spinning-box}}

  <!-- {{ember-a-box color="#6173F4" width="4" height="10" depth="2"
         position="-10 3 -5" scale="2 0.5 3"}} -->

  <a-plane rotation="-90 0 0" width="4" height="4" color="#7BC8A4"></a-plane>

  <a-sky color="#3C3C3C"></a-sky>

  <a-entity position="0 1 3.8">
    <a-entity camera look-controls></a-entity>
  </a-entity>

  <a-entity>
    <a-entity light="color: #CCC; intensity: 0.75" position="3 3 6">
    </a-entity>

    <a-animation attribute="rotation"
               dur="10000"
               fill="forwards"
               to="0 360 0"
               repeat="indefinite"></a-animation>
  </a-entity>

  <a-entity light="type: ambient; intensity: 0.1; color: #333"></a-entity>
</a-scene>

<a-scene>
  <a-assets>
    <audio id="music" src="music.mp3"></audio>
    <audio id="coin" src="coin.mp3"></audio>
    <img id="sky" src="sky.jpg"/>
  </a-assets>

  {{#each spheres as |sphere|}}
    <br>
    <a-entity sound="src: coin.mp3; on: click">
      {{ember-a-sphere sphere=sphere position=sphere.position radius="1.25" color="#EF2D5E" onClick=(action 'clicked')}}
    </a-entity>
  {{/each}}

  <br>
  {{ember-a-box position="-1 0.5 1" rotation="0 45 0" width="1" height="1" depth="1" color="#4CC3D9"}} -->

  <br>
  {{ember-a-cylinder position="1 0.75 1" radius="0.5" height="1.5" color="#FFC65D"}}

  <!-- {{ember-a-box position="2 0.5 1" rotation="0 45 0" width="1" height="1" depth="1" color="#551155"}} -->

  <br>
  <!-- {{spinning-box}} -->

  <a-plane rotation="-90 0 0" width="4" height="4" color="#7BC8A4"></a-plane>

  <a-sky src="sky.jpg" color="#3C3C3C"></a-sky>

  <a-camera look-controls wasd-controls position="0 1 3.8">
    <a-cursor></a-cursor>
  </a-camera>

  <a-entity>
    <a-entity light="color: #CCC; intensity: 0.75" position="6 6 6"
      sound="src: music.mp3; loop: true; autoplay: false">
      <a-sphere color="#CCC"></a-sphere>
    </a-entity>

    <a-animation attribute="rotation"
               dur="10000"
               easing="linear"
               fill="forwards"
               to="0 360 0"
               repeat="indefinite"></a-animation>
  </a-entity>

  <a-entity light="type: ambient; intensity: 0.1; color: #333"></a-entity>
</a-scene>
